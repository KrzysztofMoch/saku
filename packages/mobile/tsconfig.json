{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "@utils": ["src/utils"],
      "@store/*": ["./src/store/*"],
      "@constants/*": ["./src/constants/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@screens": ["./src/screens"],
      "@atoms": ["./src/components/atoms"],
      "@molecules": ["./src/components/molecules"],
      "@types": ["./src/types"],
      "@hooks": ["./src/hooks"]
    }
  }
}
